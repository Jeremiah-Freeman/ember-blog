{{#if updatePostForm}}
  <h4>Update {{blog.title}}'s {{blog.author}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=blog.title}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=blog.author}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image" placeholder=blog.image}}
      </div>

      <div class="form-group">
        <label for="story">Story</label>
        {{input value=story id="story" placeholder=blog.story}}
      </div>
      <button {{action 'update' blog}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'showForm'}}>Update</button>
{{/if}}
