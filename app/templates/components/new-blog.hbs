{{#if addPostForm}}
  <h4>Save</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" }}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" }}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image" }}
      </div>

      <div class="form-group">
        <label for="story">Story</label>
        {{input value=story id="story" }}
      </div>
      <button {{action 'saveBlog1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'showForm'}}>New Blog</button>
{{/if}}
